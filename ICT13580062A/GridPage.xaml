<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="ICT13580062A.GridPage"
    BackgroundColor="Maroon">
    <Grid
        BackgroundColor="Purple">
        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="100" />
            <ColumnDefinition
                Width="*" />
            <ColumnDefinition
                Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition
                Height="100" />
            <RowDefinition
                Height="*" />
            <RowDefinition
                Height="*" />
        </Grid.RowDefinitions>
        <Button
            Text="button"
            BackgroundColor="#CD5C5C"
        Grid.Row="0"
        Grid.Column="0"
        Grid.ColumnSpan="2"/>
        <Button
            Text="button"
            BackgroundColor="#8FBC8F"
            Grid.Column="1"
            Grid.Row="1"
        Grid.ColumnSpan="2"/>
        <Button
            Text="button"
            BackgroundColor="#63B8FF"
            Grid.Column="2"
            Grid.Row="2" />
    </Grid>
</ContentPage>